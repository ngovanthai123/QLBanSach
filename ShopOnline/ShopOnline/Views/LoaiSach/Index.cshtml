@model IEnumerable<ShopOnline.Models.LoaiSach>

@{
    ViewBag.Title = "Loại sách";
}

<div class="card mt-3">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <p><a class="btn btn-success" href="@Url.Action("Create")" role="button">Thêm mới</a></p>
        <table class="table table-bordered table-hover table-sm mb-0">
            <tr>
                <th width="5%">#</th>
                <th>
                    @Html.DisplayNameFor(model => model.TenLoai)
                </th>
                <th width="20%"></th>
            </tr>
            @{ int stt = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>@stt</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLoai)
                    </td>
                    <td class="text-center">
                        <a class="btn btn-outline-warning" @Html.ActionLink("Cập nhật", "Edit", new { id = item.ID })></a>
                        <a class="btn btn-outline-info" @Html.ActionLink("Chi tiết", "Details", new { id = item.ID })></a>
                        <a class="btn btn-outline-primary" @Html.ActionLink("Xóa", "Delete", new { id = item.ID })></a>
                    </td>
                </tr>
                stt++;
            }
        </table>
    </div>
</div>
