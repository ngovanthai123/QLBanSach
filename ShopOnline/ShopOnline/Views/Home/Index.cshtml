@model IEnumerable<ShopOnline.Models.Sach>

@{
    ViewBag.Title = "Trang chủ";
}

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="0"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="height: 350px " class=" d-block w-100" src="~/Images/aa2.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5></h5>
                <p></p>
            </div>
        </div>
        <div class="carousel-item">
            <img style="height: 400px " class="d-block w-100" src="~/Images/mau-bia-sach-dep.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img style="height: 400px " class="d-block w-100" src="~/Images/hphoto2021-04-0915-08-38-1617956394521540570528.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="card-body  ">
    <div class="card-deck">
        @foreach (var item in Model)
        {

<div class="col-md-3">
    <div class="card list-books">
        <img src="~/@item.HinhAnhBia" class="card-img-top" alt="...">
        <div class="card-body al">
            <h5 class="card-title text-center">@item.TenSach</h5>
            <p class="card-text text-center">@String.Format("{0:N0}", item.DonGia) VNĐ</p>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Them", "GioHang", new { masp = item.ID })" class="btn btn-outline-danger"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Giỏ hàng</a>
            <a href="@Url.Action("ChiTietSanPham", "Home", new { masp = item.ID })" class="btn btn-outline-primary m-1">Chi tiết</a>
        </div>
    </div>
</div>}
    </div>
</div>
